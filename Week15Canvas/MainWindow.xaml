<Window x:Class="Week15Canvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week15Canvas"
        mc:Ignorable="d"
        Title="Canvas" Height="450" Width="800">
    <Canvas Background="Beige" MouseDown="OnMouseDown">
        <Line X1="0" Y1="0" X2="{Binding Pos.X}" Y2="{Binding Path=Pos.Y}" Stroke="Navy" StrokeThickness="5"/>
        <Ellipse Fill="Yellow" Stroke="Navy" StrokeThickness="5" Canvas.Left="150" Canvas.Top="150" Width="100" Height="100" />
    </Canvas>
</Window>
